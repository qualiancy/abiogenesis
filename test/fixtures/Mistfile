var fs = require('fs');

// name, opts
proc('web', {
    type: 'server'
  , file: __dirname + '/app.js'
  , host: 'joecool.com'
  , workers: 2
  , tasks: [ 'build::assets' ]
});

// name, opts
proc('queue::urgent', {
    type: 'node'
  , file: __dirname + '/queue.js'
  , workers: 1
  , args: '--interval 5000'
  , env: {
      QUEUE: 'urgent'
    }
});

task('build::clean', function (log, done) {
  setTimeout(function () {
    done();
  }, 500);
});

task('build::assets', function (log, done) {
  setTimeout(function () {
    done();
  }, 500);
});


task('sync', function () {
  // this is sync task
});

cloud('staging::integration', {
    server: 'alchemist.qualiancy.com'
  , node: {
        version: '0.6.17'
      , env: 'staging'
    }
  , tasks: [ 'build::clean', 'sync' ]
});
